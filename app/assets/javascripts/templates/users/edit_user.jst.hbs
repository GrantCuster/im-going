<div class="main_form">
  <div class="header group">
    <h2>Your Profile</h2>
    <div class="modal_close">&times;</div>
  </div>
  <form method="put" id="user_new" class="user_new" action="/users/{{current_user_id}}" accept-charset="UTF-8"><input type="hidden" value="âœ“" name="utf8"><input name="authenticity_token" type="hidden" value="{{token}}">

    <div class="form_group group">
      <div class="input_box">
        <div class="input" contenteditable="true" id="user_username">{{name}}</div>
      </div>
    </div>

    <div class="form_group group">
      <div class="input_box">
        <div class="input" contenteditable="true" id="user_email">{{email}}</div>
      </div>
    </div>
    
    <div class="form_group group">
      <div class="form_heading">image</div>
      <img src="{{imageURL}}" />
    </div>

    <div class="form_group group">
      <div class="form_heading">description</div>
      <div class="input_box">
        <div contenteditable="true" class="input" id="user_description">{{description}}</div>
      </div>
    </div>
    
    <div class="form_group group intention_fix">
      <div class="form_heading">connected <span style="color: #777;">(connecting will take you away from this page)</span></div>
<!--       <div class="new_share facebook {{#if fb_connect}}share_it{{/if}}">facebook</div> -->
      <div class="new_share twitter {{#if tw_connect}}share_it{{/if}}">twitter</div>
    </div>
    
    <div class="form_group group">
      <input type="submit" value="update" name="commit">
    </div>
  </form>
</div>